<% content_for :title, "Listing users" %>

<table class="table table-hover table-striped">
  <tr>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user, class: 'btn btn-info' %></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning' %></td>
    <td><%= link_to 'Destroy', user, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
